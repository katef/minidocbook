$fontsize = 17px;
$baseline = 22px;

@import "misc.styl";
@import "baseline.styl";
@import "hang.styl";
@import "lists.styl";
@import "bibliography.styl";
@import "glossary.styl";
@import "minidocbook.styl";
@import "man.styl";
@import "tablesort.styl";
@import "headings.styl";

@import "cursor.styl";

@import "tables.styl";
@import "fonts.styl";

abbr[title], acronym[title] {
	text-decoration-line: underline;
	text-decoration-style: dotted;
	text-decoration-color: #ddd;
	border-bottom: none;
}

a:visited, a:link {
	color: inherit;
	text-decoration: none;

	&:hover {
		color: inherit;
		text-decoration: underline;
	}
}

body {
	background-color: #fff;
	color: #222;

	padding: 2em;
}

@media (min-width: 46em) {
	html {
		background-color: #234;
	}

	body {
		outline-right: solid 1px #000;
		outline-left:  solid 1px #000;

		padding-left:  3em;
		padding-right: 3em;

		// TODO: prefix -moz etc for other browsers, too
		box-shadow: 0px 0px 300px 0px rgba(0, 0, 0, 0.3);
		max-width: 40em;
		margin: auto;
	}
}

